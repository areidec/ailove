@import ('../../../libs/css/params.styl');

$tag-selected = #A0CEE9;

.filter-parent {
  padding: 1.77vw 4.6875vw 0;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  justify-content: space-between;
  align-items: flex-end;
  box-sizing: border-box;
  position: fixed;
  right: 0;
  top: 3.75vw;
  z-index: 10;
  background: $lightest-gray;

  &.initial {
    width: 65vw;
    opacity: 1;
    transition: width 0s ease-in-out 0.1s, opacity 0.1s ease-in;
  }

  &.courses {
    width: calc(100vw - 4.15vw);
    opacity: 0;
    transition: width 0s ease-in-out 0.1s, opacity 0.1s ease-in;
    background: transparent;
  }

  &.articles {
    width: calc(100vw - 4.15vw);
    opacity: 1;
    transition: width 0s ease-in-out, opacity 0.2s ease-out 0.35s;
  }

  &:after {
    content: '';
    height: 6.45vw;
    width: 3.5vw;
    position: absolute;
    top: 1.77vw;
    right: calc(6.45vw + 4.6875vw + 2px);
    background: linear-gradient(to left, #F8F8F8, rgba(248, 248, 248, 0));
  }

  .search-btn {
    searchBtn();
  }

  .filters-list {
    width: calc(100% - 6.45vw);
    border-bottom: 2px solid $gray;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    // overflow-x: hidden;
    overflow-y: hidden;
    // disable transform: translate, enable native scroll
    scrollbar-width: none;
    -ms-scrollbar-arrow-color: transparent;
    -ms-scrollbar-base-color: transparent;
    -ms-scrollbar-face-color: transparent;
    -ms-scrollbar-track-color: transparent;

    &::-webkit-scrollbar, &::-webkit-scrollbar-track, &::-webkit-scrollbar-thumb {
      display: none;
      -webkit-appearance: none;
      height: 0px;
      opacity: 0;
      pointer-events: none;
    }

    .filter-item {
      font-family: 'Roboto';
      font-weight: 900;
      letter-spacing: -0.05vw;
      fzd(80);
      lhd(78);
      color: $gray;
      // margin-right: 2.3vw;
      padding: 1.35vw 0;
      padding-right: 2.3vw;
      opacity: 0.12;
      transition: opacity 0.2s $InOutCubic;
      cursor: pointer;
      white-space: nowrap;
      text-transform: uppercase;

      &:hover, &.active {
        opacity: 1;
      }

      &.active {
        pointer-events: none;
      }

      &.animate {
        transition: opacity 0.2s $InOutCubic, transform 0.35s $InOutCubic;
      }
    }
  }

  .search-tags-wrap {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;

    .tab-content {
      width: 80%;
      padding: 1vw 0;
      overflow-y: hidden;
      overflow-x: scroll;
      scrollbar-width: none;
      -ms-scrollbar-arrow-color: transparent;
      -ms-scrollbar-base-color: transparent;
      -ms-scrollbar-face-color: transparent;
      -ms-scrollbar-track-color: transparent;

      &::-webkit-scrollbar, &::-webkit-scrollbar-track, &::-webkit-scrollbar-thumb {
        display: none;
        -webkit-appearance: none;
        height: 0px;
        opacity: 0;
        pointer-events: none;
      }

      >>>.mat-chip-list-wrapper {
        // width: 100%;
        width: max-content;
        display: flex;
        flex-wrap: nowrap;
        justify-content: flex-start;
        align-items: center;
        align-content: flex-start;
      }

      .tag {
        margin: 0.5vw 1vw;
        cursor: pointer;
        letter-spacing: 0.01vw;
        fzd(16);
        font-weight: 400;

        &.active {
          background-color: $tag-selected;
          color: white;
        }
      }
    }

    button {
      fzd(16);
    }
  }
}
