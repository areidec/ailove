@import ('../../../../libs/css/params.styl');

$layout-bg = rgba(#34393e, 0.6);
$bottom-bg = #EBECED;
$tag-selected = #A0CEE9;

.search-component-wrap {
  width: 100%;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99;
  background: $layout-bg;
  overflow: hidden;

  .close-helper {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 100;
  }

  .search-content-wrap {
    position: relative;
    z-index: 101;
  }

  .inner-cont {
    width: 100%;
    padding: 1.77vw 4.6875vw 0;
    background: $lightest-gray;
    position: relative;
    box-sizing: border-box;

    .tabbar-content {
      .tab-content {
        padding: 1.56vw 0 4.68vw 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        align-content: flex-start;

        .tag {
          margin: 0.5vw 1vw;
          cursor: pointer;
          letter-spacing: 0.01vw;
          fzd(16);
          font-weight: 400;

          &.active {
            background-color: $tag-selected;
            color: white;
          }
        }
      }
    }

    .search-wrap {
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: stretch;

      .search-btn {
        searchBtn();
      }

      .input-wrap {
        width: calc(100% - 6.45vw);
        height: calc(6.45vw - 2px);
        border-bottom: 2px solid $gray;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        overflow: hidden;

        .form-field {
          width: 100%;
          // height: 100%;
          height: calc(100% - 1.25em);

          >>>.mat-form-field-wrapper {
            width: 100%;
            fzd(40);

            input {
              width: 100%;
              height: 100%;
            }
          }

          .search-input-icon {
            fzd(40);
            padding: 0.5vw;
          }
        }
      }
    }
  }

  .bottom-cont {
    width: 100%;
    padding: 0.5vw 4.6875vw;
    background: $bottom-bg;
    display: flex;
    justify-content: space-between;
    align-items: center;
    fzd(18);
    box-sizing: border-box;

    .right-btns {
      button {
        cursor: pointer;
        fzd(18);
      }
    }
  }
}
