@import ('../../../libs/css/params.styl');

.header-parent {
  height: 3.75vw;
  background: white;
  box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: transform 0.45s ease-in-out, width 0.45s ease-in-out;
  position: fixed;
  top: 0;
  right: 0;
  z-index: 10;

  &.initial {
    width: 65vw;
  }

  &.courses {
    width: calc(100vw - 4.15vw);
    // transform: translateX(90.95vw);
    transform: translateX(91.725vw);
  }

  &.articles {
    width: calc(100vw - 4.15vw);
  }

  .logo-wrap {
    width: 11.6vw;
    height: 2.1vw;
    // padding: 0 2vw;
    padding: 0 1.3vw;

    img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
  }

  .right-side-content {
    height: 100%;
    text-align: center;
    display: flex;

    .text {
      color: $gray;
      fzd(13);
      font-weight: 700;
      text-transform: uppercase;

      &.study {
        color: white;
      }
    }

    .list {
      height: 100%;
      display: flex;
      align-items: center;

      a {
        color: inherit;
        height: 100%;
        line-height: 3.75vw;
        padding: 0 1.05vw;
        text-decoration: none;
        background: transparent;
        transition: background 0.25s $InOutCubic;
        cursor: pointer;

        &:hover {
          background: $light-gray;
        }
      }
    }

    .login {
      height: 100%;
      display: flex;
      align-items: center;
      border-left: 2px solid $lightest-gray;

      .login-btn {
        padding: 0 2.1vw;
        display: flex;
        justify-content: center;
        align-items: center;

        .login-icon {
          width: 1.25vw;
          height: 1.25vw;
          display: flex;
          justify-content: center;
          align-items: center;
          cursor: pointer;

          img {
            width: 100%;
            height: 100%;
            object-fit: contain;
          }
        }
      }

      .study-btn {
        width: 11.25vw;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background: $yellow;
        cursor: pointer;
      }

      .study-btn-mat {
        width: 11.25vw;
        height: 100%;
        color: white;
        border-radius: 0;
        text-transform: uppercase;
        fzd(13);
        font-weight: 700;
      }

      a {
        // width: 100%;
        // height: 100%;
        text-decoration: none;
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
      }
    }
  }
}
