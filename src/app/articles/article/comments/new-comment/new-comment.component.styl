@import ('../../../../../libs/css/params.styl');

:host {
  width: 100%;
  display: block;

  .new-comment {
    margin: 3vw 0;
    width: 100%;

    .comment {
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: flex-start;

      &.unloggined {
        background-color: #F0F1F3;

        .comment-login {
          width: calc(100% - 7.5%);
          color: #415061;
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: center;
          height: 15vw;
          background-color: #F0F1F3;
          box-sizing: border-box;
          position: relative;

          .login-about {
            color: #415061;
            opacity: 0.4;
            fzd(24);
            lhd(34);
            text-align: center;
            width: 60%;
            margin-bottom: 2vw;
          }

          button {
            width: 20%;
            height: 2.7vw;
            color: white;
            fzd(13);
            text-transform: uppercase;
          }
        }
      }

      .comment-author {
        display: flex;
        align-items: flex-start;
        width: 7.5%;

        .portrait {
          width: 2.4vw;
          height: 2.4vw;
          display: flex;
          justify-content: center;
          align-items: center;
          border: 1px solid rgba($yellow, 0.3);
          border-radius: 50%;

          .inner-img {
            width: 2.1vw;
            height: 2.1vw;
            border-radius: 50%;
            overflow: hidden;

            img {
              object-fit: cover;
              width: 100%;
              height: 100%;
            }
          }
        }
      }

      .comment-body {
        width: calc(100% - 7.5%);
        color: #415061;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: flex-start;
        height: 15vw;
        background-color: #F0F1F3;
        box-sizing: border-box;
        padding: 2.5% 5%;
        position: relative;

        .mat-form-field {
          width: 100%;

          textarea {
            background-color: #fff;
            resize: none;
          }
        }

        button {
          width: 12.5vw;
          height: 2.7vw;
          color: white;
          fzd(13);
          text-transform: uppercase;
        }
      }
    }
  }
}
