@import ('../../../libs/css/params.styl');

$light-gray = #415061;

.article-parent {

  .plashka {
    display: none;
  }

  .article-wrap {
    // overflow: scroll;
    width: 100%;
    background-color: #f8f8f8;

    .article-image {
      position: absolute;
      z-index: 0;
      width: 100%;
      height: 40vw;

      img {
        object-fit: cover;
        width: 100%;
        height: 100%;
      }
    }

    .article-content {
      padding-top: 30vw;
      z-index: 1;
      position: relative;
      display: flex;
      flex-direction: row;
      justify-content: space-around;
      align-items: flex-start;
      width: 100%;

      .article-main {
        background-color: #fff;
        width: 57.95vw;
        box-sizing: border-box;
        padding: 3.6vw;
        position: relative;
        overflow-x: hidden;

        .article-call-to-action {
          width: calc(100% + 7.2vw);
          margin: 2vw;
          margin-left: -3.6vw;
          display: flex;
          padding: 75px 0;
          position: relative;

          .devider {
            position: absolute;
            left: 0;
            width: 3px;
            top: -20px;
            height: calc(100% + 40px);
            box-shadow: 0 0 40px 0 rgba(0, 0, 0, 0.05);
            background: #000;
            opacity: .1;
          }

          .left-part {
            display: block;
            position: relative;
            margin-left: 6.5%;
            margin-right: 5.1%;

            .circle {
              border-radius: 50%;
              border: solid 1.5px #ffffff;
              width: 7vw;
              height 7vw;
              display: flex;
              justify-content: center;
              align-items: center;

              &:hover {

                svg {

                  .play {
                    fill: #ffffff;
                  }

                }

              }

            }

            svg {
              margin-left 1vw;
              width: 3vw;
              cursor pointer;

              .play {
                transition: all .5s;
              }

            }

          }

          .right-part {
            position: relative;
            padding-left: 5%;
            margin-right: 10%;

            h3 {
              color: #fff;
              fzd(34);
              lhd(70);
            }

            p {
              font-family: Roboto;
              fzd(24);
              lhd(34);
            }

            button {
              margin-top: 2vw;
              width: 12vw;
              height: 2.5vw;
              border-radius: 1.25vw;
              fzd(13);
              text-transform: uppercase;
              font-weight: 700;
              color: inherit;
              background: #fff;
              border-color: rgba(255, 255, 255, 0.4);
            }

          }

        }

        h1 {
          font-family: Roboto;
          font-weight: 400;
          color: $light-gray;
          fzd(62);
          lhd(70);
          margin-bottom: 1vw;
        }

        .tags {
          display: flex;
          flex-direction: row;
          color: #A0CEE9;
          font-family: Roboto;
          fzd(18);
          font-weight: 400;
          margin-bottom: 1vw;

          .tag {
            margin-right: 1vw;
          }
        }

        mat-divider {
          width: 100%;
          position: relative;
          margin-bottom: 1vw;
        }

        .header-bottom {
          display: flex;
          flex-direction: row;
          width: 100%;
          justify-content: space-between;
          align-items: center;
          margin-bottom: 3vw;

          .date {
            text-transform: uppercase;
            color: $light-gray;
            opacity: 0.3;
            fzd(18);
            font-weight: 400;
          }

          .comments-likes {
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;

            .comments, .likes {
              fzd(18);
              font-family: Roboto;
              font-weight: 400;
              display: flex;
              flex-direction: row;
              justify-content: center;
              align-items: center;
              width: 3vw;

              svg {
                margin-right: 0.25vw;
                width: 0.932vw;
              }
            }
          }
        }

        .author-block {
          width: 90%;
          margin: auto;
          display: flex;
          flex-direction: row;
          justify-content: space-between;
          align-items: flex-start;
          margin-bottom: 3vw;

          .author {
            width: 25%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;

            .portrait {
              width: 6vw;
              height: 6vw;
              display: flex;
              justify-content: center;
              align-items: center;
              border: 1px solid rgba($yellow, 0.3);
              border-radius: 50%;

              .inner-img {
                width: 5vw;
                height: 5vw;
                border-radius: 50%;
                overflow: hidden;

                img {
                  object-fit: cover;
                  width: 100%;
                  height: 100%;
                }
              }
            }

            .about {
              margin-top: 0.5vw;
              fzd(16);
              color: $light-gray;
              font-weight: 500;
              text-align: center;
            }
          }

          .divider {
            width: 10%;
            height: 100%;
            position: relative;
          }

          .description {
            width: 65%;
            display: flex;
            justify-content: flex-start;
            align-items: center;
            position: relative;

            .text {
              color: $light-gray;
              fzd(24);
              lhd(34);
              font-weight: 500;
            }

            .inner {
              position: absolute;
              background-color: $yellow;
              width: 2px;
              height: 100%;
              left: -10%;
            }
          }
        }

        .main-block {
          font-family: Roboto;
          fzd(24);
          lhd(34);
          color: $light-gray;

          p {
            margin-block-start: 0;
            margin-block-end: 0;
          }

          a {
            text-decoration: none;
            color: #0293E8;
            opacity: 0.5;

            &:hover {
              opacity: 1;
            }
          }

          ul {
            margin: 0 0 3vw;
            padding-left: 21px;
            list-style-image: url('../../../assets/li-style.svg');

            li {
              margin-bottom: 1vw;
              padding-left: 2.5vw;
              // p {
              //   margin-left: 2.5vw;
              // }
            }
          }

          ol {
            margin: 3vw 0 3vw;
            padding-left: 0;
            list-style: none;
            counter-reset: li;

            li {
              //color: $yellow;
              margin-bottom: 1vw;
              padding-left: calc(2.5vw + 21px);
              position relative;
              counter-increment: li;

              &:before  {
                content: counter(li) ".";
                position: absolute;
                left: 0;
                color: #FCC624;
              }

              p {
                color: $light-gray;
                // margin-left: 2.5vw;
              }
            }
          }

          h2 {
            fzd(36);
            lhd(70);
            font-weight: 400;
          }

          .authored-blockquote {
            margin: 6vw 0 4vw; // 6vw, coz 3vw for background before and 3 margin, same for 4 (3 + 1)
            color: white;
            font-style: italic;
            position: relative;

            &:before {
              position: absolute;
              width: 120%;
              left: -10%;
              top: -3vw;
              content: '';
              background-color: #546170;
              height: calc(100% + 6vw);
              z-index: 0;
            }

            &:after {
              position: absolute;
              width: 3vw;
              content: url('../../../assets/quotes.svg');
              z-index: 1;
              top: -3.5vw;
              right: 0%;
            }

            blockquote {
              margin: 0;
              font-family: Roboto;
              fzd(32);
              lhd(42);
              position: relative;
              z-index: 2;
            }

            .author {
              margin: 3vw 0 2vw;
              color: $yellow;
              position: relative;
              z-index: 2;
            }
          }
        }

        .course-end {
          margin-top: 2vw;
          display: flex;
          justify-content: space-between;

          .button {
            width: 12vw;
            height: 2.7vw;
            line-height: 2.7vw;
            text-transform: uppercase;
            fzd(13);
            color: white;
            font-weight: 700;
            border-radius: 1.35vw;
            background-color: rgba(#A0CEE9, 0.4);

            svg {
              width: 0.932vw;
              margin-right: 0.5vw;
            }

            &.liked {
              background-color: rgba(#59acdc, 1);
            }
          }
        }

        mat-divider {
          margin-top: 1vw;
        }
      }

      .article-right {
        padding: 3.2vw 0;
        background-color: green;
        width: 26vw;
        text-align: center;
        top: 15vw;
        display: flex;
        justify-content: center;
        align-items: center;

        .course-wrap {
          width: 80%;
          display: flex;
          justify-content: center;
          align-items: center;
          flex-direction: column;

          .course-play {
            width: 6.25vw;
            cursor: pointer;

            svg {
              g{
                transition: all .5;
              }
            }

            &:hover {
              svg {
                g {
                  fill: #fff;
                }
              }
            }
          }

          .user-ava {
            width: 6.25vw;
            height: 6.25vw;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            border: 1.45px solid #88CA60;

            img {
              width: 90%;
              object-fit: cover;
            }

          }

          .some-text {
            fzd(16);
            lhd(22);
            margin-bottom: 8px;
            color: #4B5A6B;
          }

          .user-name {
            fzd(16);
            lhd(19);
            margin-top: 8px;
            margin-bottom: 1vw;
            font-weight: 500;
          }

          .user-course {
            fzd(18);
            lhd(24);
            font-weight: bold;
          }

          .course-header {
            fzd(28);
            color: white;
            margin: 1vw 0;
          }

          .course-about {
            fzd(18);
            lhd(24);
            margin: 0 0 1vw;
          }

          button {
            margin-top: 2vw;
            width: 12vw;
            height: 2.5vw;
            border-radius: 1.25vw;
            fzd(13);
            text-transform: uppercase;
            font-weight: 700;
            color: white;
            border-color: rgba(255, 255, 255, 0.4);
          }
        }
      }
    }
  }

  @media screen and (max-width: 768px) {

    .article-wrap {
      overflow: hidden;
      background: #fff;
      //margin-top: 60px;
      position: relative;

      .article-image {
        position: relative;
        width: calc(100% - 40px);
        margin-left: 20px;
        height: auto;
        display: flex;
        line-height: 0;
        margin-top: 20px;
      }

      .article-content {
        padding-top: 0px;
        flex-direction: column;
        overflow: hidden;

        .article-right {
          top: 0;
          width: calc(100% + 40px);
          margin-left: -20px;
          box-shadow: none;
          border-radius: 0px;
          padding: 30px 0;
          margin-top: 20px;
          display: none;

          .course-wrap {
            width: calc(100% - 40px);

            .confirm-email-wrap {
              width: 100%;

              .confirm-text {
                margin-bottom: 20px;
              }

            }

            .course-play {
              width: auto;

              svg {
                width: 80px;
              }

            }

            .course-header {
              font-size: 28px;
              line-height: 1.21;
              letter-spacing: -0.7px;
              text-align: center;
              margin: 13px 0;
            }

            .course-about {
              font-size: 14px;
              line-height: 1.43;
              color: #fff;
              margin-bottom: 30px;
            }

            button {
              margin-top: 0;
              width: 200px;
              height: 48px;
              border-radius: 26px;
              font-size: 13px;
              margin-bottom: 30px;
            }

            .mat-divider {
              border-top-color: #fff;
            }

            .course-number {
              position: absolute;
              top: 20px;
              right: 20px;
            }

            .course-info {
              font-size: 14px;
              line-height: 1.43;
              margin-top: 21px;
            }

            .toggle-to-course {
              width: auto;
              height: auto;
              border: none;
              background: transparent;
              font-size: 13px;
              margin-bottom: 0;
              margin-top: 19px;
              border-bottom: 1px dashed #fff;
              border-radius: 0;
              outline: none;
            }

          }

        }


        .article-main {
          width: 100%;
          padding: 15px 20px 0px 20px;
          border-radius: 0px;
          overflow: hidden;
          box-shadow: none;

          .article-call-to-action {
            width: calc(100% + 40px);
            margin: 0;
            margin-left: -20px;
            padding: 20px 0;
            flex-direction: column;
            align-items: center;
            margin-bottom: 36px;
            margin-top: 45px;

            .left-part {
              margin: 0 auto;

              .circle {
                width: 80px;
                height: 80px;
              }

              svg {
                width: 30px;
                margin-left 9px;
              }

            }

            .devider {
              display: none;
            }

            .right-part {
              margin: 0 auto;
              padding: 0;
              width: calc(100% - 40px);
              text-align: center;

              h3 {
                font-size: 28px;
                font-weight: 300;
                line-height: 1.21;
                letter-spacing: -0.7px;
              }

              p {
                font-size: 14px;
                line-height: 1.43;
              }

              button {
                margin-top: 0;
                height: 48px;
                width: 200px;
                border-radius: 28px;
                font-size: 13px;
                margin-bottom: 30px;
              }

            }

          }

          .course-end {
            margin-top: 0;
            text-align: center;
            padding-top: 30px;
            background: #f8f8f8;
            width: calc(100% + 40px);
            margin-left: -20px;
            flex-direction: column;
            align-items: center;

            button.button {
              width: 221px;
              height: 52px;
              border-radius: 26px;
              font-size: 13px;
              line-height: 55px;
              margin-bottom: 30px;

              .mat-button-wrapper {

                svg {
                  margin-right:12px;
                  width: 17px;
                }

              }

            }

          }

          h1 {
            font-size: 16px;
            line-height: 1.31;
            margin-bottom: 10px;
          }

          .tags {
            font-size: 14px;
            line-height: 1.21;
            flex-wrap: wrap;
            margin-bottom: 0;

            .tag {
              margin-right: 15px;
              margin-bottom: 15px;
            }

          }

          .mat-divider {
            margin: 0;
            border-top-color: #415061;
          }

          .header-bottom {
            margin: 15px 0;

            .date {
              font-size: 12px;
            }

            .comments-likes {

              .comments {
                width: auto;
                font-size: 12px;
                margin-right: 15px;

                svg {
                  width: 12px;
                  height: 12.4px;
                  margin-right: 7px !important;
                }

              }

              .likes {
                width: auto;
                font-size: 12px;

                svg {
                  width: 12px;
                  height: 12.4px;
                  margin-right: 7px !important;
                }

              }

            }

          }

          .author-block {
            margin: 0;
            margin-bottom: 20px;
            display: flex;
            flex-direction: column;
            width: 100%;

            .author {
              width: 100%;
              flex-direction: row;
              margin-bottom: 28px;

              .portrait {
                width: 116px;
                height: 116px;
                border: solid 1.5px #fcc624;

                .inner-img {
                  width: 100%;
                  height: 100%;
                }

              }

              .about {
                font-size: 16px;
                margin-top: 0;
                width: calc(100% - 116px);
              }

            }

            .description {
              width: 100%;

              .text {
                font-size: 16px;
                line-height: 1.38;
                letter-spacing: normal;
                padding-left: 16px;
              }

              .inner {
                left: 0;
              }

            }

          }
          .main-block {
            font-size: 16px;
            line-height: 1.38;

            ul, ol {
              margin: 30px 0;
              padding-left: 21px;

              li {
                margin-bottom: 26px;
              }

            }

            ol {
              padding-left: 0;
            }

            .article-content-inner {
              margin: 15px 0;
            }

            .authored-blockquote {
              background: #546170;
              margin: 40px 0;
              margin-left: -20px;
              width: calc(100% + 40px);
              padding: 50px 0;

              &:before {
                display: none;
              }

              &:after {
                width: 50px;
                right: 20px;
                top: -14px;
              }

              .author {
                width: calc(100% - 40px);
                margin: 0;
                margin-left: 20px;
                margin-top: 30px;
                font-size: 20px;
                line-height: 1.3;
              }

              blockquote {
                font-size: 20px;
                font-weight: normal;
                font-stretch: normal;
                line-height: 1.3;
                letter-spacing: normal;
                width: calc(100% - 40px);
                margin-left: 20px;
              }

            }
            h2, h3 {
              font-size: 24px;
              font-weight: normal;
              font-style: normal;
              font-stretch: normal;
              line-height: 0.83;
              letter-spacing: normal;
              color: #415061;
              margin: 30px 0;
            }

            h3 {
              line-height: 1.1;
              margin-top: 0;
              margin-bottom: 0;
            }


          }

        }

      }

    }

    .plashka {
      position: fixed;
      display: flex;
      bottom: 0;
      left: 0;
      background: yellow;
      z-index: 999;
      color: #fff;
      width: 100%;
      transition: opacity .5s;
      padding: 8px 20px;
      box-sizing: border-box;
      justify-content: space-between;

      .title {
        //width: 50%;
        font-size: 12px;
        line-height: 1.33;
      }

      a {
        color: #fff;
        text-decoration: none;
      }

      .call-to-action {
        font-size: 13px;
        text-transform: uppercase;
        text-align: right;
      }

    }

  }

  .more {
    padding-top: 70px;
    padding-bottom: 70px;
    &__container {
      width 89.9vw;
      margin: 0 auto 62px;
    }
    &__title {
      font-family: Roboto;
      font-size: 36px;
      font-weight: 900;
      font-style: normal;
      font-stretch: normal;
      line-height: normal;
      letter-spacing: -0.45px;
      color: #415061;
      text-transform uppercase;
    }
    &__row {
      box-sizing: border-box;
      display: flex;
      flex-wrap: wrap;
      flex-wrap: wrap;
      justify-content: space-around;
    }
    &__col {
      box-sizing: border-box;
      flex: 0 0 26vw;
      max-width: 26vw;
    }

  }


  @media screen and (max-width: 768px) {
    .more {
      padding: 45px 20px 0;
      &__container {
        width 100%;
        margin: 0 auto 20px;
      }
      &__col {
        flex: 0 0 100%;
        max-width: 100%;
        margin-bottom 20px
        &:last-child {
          margin-bottom: 0;
        }
      }
    }
  }

}
