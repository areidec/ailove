@import ('./../../../../libs/css/params.styl');

:host {
  width: 35vw;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  position: absolute;
  right: 0;

  .first-step {
    position: absolute;
    width: 35vw;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;

    .mid-content {
      width: 80%;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;

      .study-btn-mat {
        display: none;
      }

      .play {
        width: 7.8vw;
        height: 7.8vw;
        border: 1px solid gray;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        cursor: pointer;

        &:before {
          content: "";
          position: absolute;
          width: 50%;
          height: 50%;
          z-index: 10;
          border: 3px solid #FFFFFF;
          border-radius: 0 100% 0 0/0 100% 0 0;
          right: -1.5px;
          top: -1.5px;
          border-bottom: none;
          border-left: none;
        }

        &:hover {
          svg {
            g {
              fill: #ffffff !important;
            }
          }
        }

        svg {
          width: 50px;
          height: 43px;
          g {
            transition: all .3s;
            fill: transparent !important;
          }
        }

      }

      .about {
        font-weight: 300;
        fzd(50);
        lhd(56);
        letter-spacing: -0.08vw;
        text-align: center;
        margin: 3.125vw 0;
      }

      .button {
        width: 11vw;
        height: 2.7vw;
        text-transform: uppercase;
        fzd(13);
        color: white;
        font-weight: 700;
        border-radius: 1.35vw;
      }
    }

    .bot-content {
      position: absolute;
      bottom: 2.1vw;
      height: 2.1vw;
      display: flex;
      width: 12vw;
      justify-content: space-between;
      align-items: center;
      opacity: 0.4;

      img {
        height: 70%;
        max-width: 45%;
        object-fit: contain;
      }

      .shape {
        height: 100%;
        width: 1px;
        opacity: 0.43;
        background-color: #fff;
      }
    }
  }

  .second-step {
    position: absolute;
    height: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    overflow: scroll;
    width: 35vw;
    flex-direction: column;
    scrollbar-width: none;
    -ms-scrollbar-arrow-color: transparent;
    -ms-scrollbar-base-color: transparent;
    -ms-scrollbar-face-color: transparent;
    -ms-scrollbar-track-color: transparent;

    &::-webkit-scrollbar {
      -webkit-appearance: none;
      height: 0px;
      opacity: 0;
    }

    &::-webkit-scrollbar-track {
      -webkit-appearance: none;
      height: 1px;
      opacity: 0;
    }

    &::-webkit-scrollbar-thumb {
      -webkit-appearance: none;
      height: 1px;
      opacity: 0;
    }

    .top-content {
      text-align: center;
      margin-bottom: 3.64vw;
      margin-top: 6.7vw;
      position: relative;
      width: 86%;

      .header-wrap {
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        flex-direction: column;

        .header {
          fzd(50);
          lhd(45);
          letter-spacing: -0.065vw;
          font-weight: 300;
        }

        .about {
          fzd(20);
          lhd(28);
        }
      }
    }

    .mid-content {
      width: 100%;
      position: relative;

      .card-wrap {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
      }
    }

    .bot-content {
      text-align: center;
      position: relative;
      width: 75%;
      margin-bottom: 4vw;

      .bot-wrap {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;

        .shape {
          width: 40%;
          margin-bottom: 1.5vw;

          img {
            width: 100%;
          }
        }

        .about {
          fzd(24);
          lhd(34);
        }
      }
    }
  }

  @media screen and (max-width: 768px) {
    width: 100vw;
    position: relative;
    .first-step {

      top:0;
      height: 369px;
      position: relative;

      .mid-content {

        height: 100%;

        .play {
          height: 78px;
          width: 78px;
        }

        .about {
          margin: 20px 0;
          font-size: 28px;
          font-weight: 300;
          line-height: 1.21;
          letter-spacing: -0.7px;
        }

        .study-btn-mat {
          display: block;
          background: transparent;
          border-radius: 28.8px;
          border: solid 1.5px rgba(255, 255, 255, 0.9);
          color: #fff;
          font-size: 13px;
          font-weight: bold;
          text-transform: uppercase;
          height: 50px;
          line-height: 50px;
          width: 204px;
          margin-bottom: 33px;
        }

        .button {
          width: 160px;
          height: 52px;
          position: absolute;
          bottom: -25px;
          border-radius: 26px;

          >>>span {
            font-size: 13px;
            line-height: 52px;
          }

        }

      }

      .bot-content {
        display:none;
      }

    }


    .second-step {
      position: relative;
      width: 100vw;
      overflow-x: hidden;
      overflow: auto;

      .top-content {
        margin: 83px 0;

        .header-wrap {

          .header {
            margin-top:0;
            margin-bottom: 15px;
            font-size: 28px;
            font-weight: 300;
            line-height: 1.21;
            letter-spacing: -0.7px;
          }

          .about {
            font-size: 14px;
            font-weight: normal;
            line-height: 1.43;
            letter-spacing: normal;
            text-align: center;
          }

        }

      }

      .mid-content {

        .card-wrap {
          width: 100vw;
          flex-wrap: wrap;
        }

      }

      .bot-content {
        display: none;
      }

    }

  }

}
