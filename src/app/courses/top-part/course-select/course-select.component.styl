:host {
  width: 100%;
  height: 100vh;
  display: block;

  .courses-cards-parent {
    width: 95.85vw;
    height: 100vh;
    position: relative;
    display: flex;

    app-course-select-card {
      width: 100%;
      height: 100%;
      border-right: 1px solid rgba(255, 255, 255, 0.4);
      position: relative;

      &:nth-last-child(1) {
        border-right: none;
      }
    }
  }

  @media screen and (max-width: 768px) {
    height: auto;

    .courses-cards-parent {
      flex-direction: column;
      height: auto;
      width: 100%;

      app-course-select-card {
        height: auto;
        border: none;
      }

    }

  }

}
