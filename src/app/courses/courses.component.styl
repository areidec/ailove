@import ('../../libs/css/params.styl');

:host {
  // background-color: #445567;
  .courses-parent {
    height: 100vh;
    overflow: scroll;
    position: absolute;
    right: 0;
    width: calc(100vw - 4.15vw);
    // transition: width 0.45s ease-in-out;
    scrollbar-width: none;
    -ms-scrollbar-arrow-color: transparent;
    -ms-scrollbar-base-color: transparent;
    -ms-scrollbar-face-color: transparent;
    -ms-scrollbar-track-color: transparent;

    &::-webkit-scrollbar, &::-webkit-scrollbar-track, &::-webkit-scrollbar-thumb {
      display: none;
      -webkit-appearance: none;
      height: 0px;
      opacity: 0;
      pointer-events: none;
    }

    .left-side {
      border-right: 1px solid rgba(32, 32, 32, 0.1);
      box-sizing: border-box;
      position: relative;
      width: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    @media screen and (max-width: 768px) {
      width: 100vw;
      height: auto;
      position: relative;
      overflow: visible;
    }

  }

  .button {
    position: fixed;
    right: -1.6vw;
    top: calc(50% - 1.6vw);
    width: 3.2vw;
    height: 3.2vw;
    box-shadow: 0 0.25vw 1.041vw 0 rgba(0, 0, 0, 0.1);
    border-style: solid;
    border-width: 0.03vw;
    border-image-source: linear-gradient(to bottom, rgba(255, 255, 255, 0.12), rgba(255, 255, 255, 0.06) 20%, rgba(255, 255, 255, 0));
    border-image-slice: 1;
    background-color: #ffffff;
    border-radius: 50%;
    cursor: pointer;
    z-index: 999;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: box-shadow 0.3s $InCubic, transform 0.3s $InCubic;
    transform: scale(1) translateZ(0px) perspective(1px);

    &:hover {
      transform: scale(1.05) translateZ(0px) perspective(1px);
      transition: box-shadow 0.3s $OutCubic, transform 0.3s $OutCubic;
      box-shadow: 0 0.5vw 1.041vw 0 rgba(0, 0, 0, 0.075);
    }

    .inner-arrow {
      width: 30%;
      position: relative;
      transition: transform 0.35s $InOutCubic;

      &.to-left {
        transform: scale(0.8) translateX(20%);

        .line {
          background-color: $green;

          &.first {
            transform: rotate(-45deg) translateX(-4px);
          }

          &.second {
            transform: rotate(45deg) translateX(-4px);
          }
        }
      }

      &.to-right {
        transform: scale(0.8) translateX(100%);

        .line {
          background-color: $yellow;

          &.first {
            transform: rotate(-135deg) translateX(0);
          }

          &.second {
            transform: rotate(135deg) translateX(0);
          }
        }
      }

      .line {
        width: 100%;
        height: 4px;
        display: block;
        transition: transform 0.35s $InOutCubic, background-color 0.35s $InOutCubic;

        &.first {
          transform-origin: 0 100%;
        }

        &.second {
          transform-origin: 0 0;
        }
      }
    }
  }

  @media screen and (max-width: 768px) {
    .button {
      display: none;
    }
  }

}
