@import ('../../../../libs/css/params.styl');

:host {
  margin-bottom: 2vw;
  width: 18.07%;
  margin-right: 2.4%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;

  &:nth-child(5) {
    margin-right: 0;
  }

  .photo {
    width: 100%;
    margin-top: 0.5vw;
    margin-bottom: 0.5vw;
    height: 20vw;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  .name {
    color: $gray;
    fzd(20);
    lhd(34);
    font-weight: 500;
  }

  .about {
    margin-top: 0.5vw;
    width: 90%;
    fzd(16);
    lhd(22);
    color: #9A9D9F;
  }

  @media screen and (max-width: 768px) {
    width: calc(100vw - 40px);
    margin-bottom: 20px;
    margin-right: 0;
    margin-left: 20px;
    align-items: center;

    .photo {
      width: auto;
      height: auto;
      margin-top: 14px;
      margin-bottom: 10px;
      min-height: 312px;
      min-width: 260px;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

    }

    .name {
      color: $gray;
      font-size: 20px;
      line-height: 1.7;
      font-weight: 500;
    }

    .about {
      margin-top: 0;
      width: 100%;
      font-size: 14px;
      line-height: 1.43;
      color: #9A9D9F;
      text-align: center;
    }

  }

}
