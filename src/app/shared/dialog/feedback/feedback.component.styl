@import ('../../../../libs/css/params.styl');

:host {
  padding: 2.5vw 2vw 0;
  display: block;

  .header {
    font-family: Roboto;
    font-weight: 200;
    fzd(28);
    margin-bottom: 1vw;
  }

  textarea {
    resize: none;
  }

  .content-wrap {
    width: 100%;

    .full-width {
      width: 100%;
    }

    .error {
      font-family: 'Roboto';
      fzd(16);
    }
  }

  .buttons-wrap {
    margin-top: 1vw;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-family: Roboto;
    font-weight: 400;
    fzd(18);
    margin-bottom: 0.5vw;

    .link-to {
      color: #0493E7;
      opacity: 0.5;
      transition: opacity 0.25s $OutCubic;

      &:hover {
        opacity: 1;
        cursor: pointer;
        transition: opacity 0.25s $InCubic;
      }
    }

    button {
      width: 45%;
      height: 2.7vw;
      color: white;
      fzd(13);
      text-transform: uppercase;
    }

    &.second {
      justify-content: flex-start;
    }
  }
}
