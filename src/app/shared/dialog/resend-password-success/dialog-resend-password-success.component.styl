@import ('../../../../libs/css/params.styl');

:host {
  padding: 2.5vw 2vw 2vw;
  display: block;

  .header {
    font-family: Roboto;
    font-weight: 200;
    fzd(28);
    margin-bottom: 2vw;
  }

  .content-wrap {
    width: 100%;

    .info {
      color: #415061;
      fzd(16);
      lhd(22);
      font-family: Roboto;
      font-weight: 400;

      span {
        font-weight: 700;
      }
    }

    .full-width {
      width: 100%;
    }
  }

  .buttons-wrap {
    margin-top: 1vw;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    font-family: Roboto;
    font-weight: 400;
    fzd(18);
    margin-bottom: 0.5vw;

    .link-to {
      color: #0493E7;
      opacity: 0.5;
      transition: opacity 0.25s $OutCubic;

      &:hover {
        opacity: 1;
        cursor: pointer;
        transition: opacity 0.25s $InCubic;
      }
    }

    button {
      width: 45%;
      height: 2.7vw;
      color: white;
      fzd(13);
      text-transform: uppercase;
    }

    &.second {
      justify-content: flex-start;
    }
  }
}
