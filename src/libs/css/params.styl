@import './lib.styl';

// Colors
$lightest-gray = #F8F8F8;
$light-gray = #E7E7E7;
$gray = #415061;
$light-blue = #A0CEE9;
$yellow = #FCC624;
$green = #88CA60;

// font-size
fzd(size) {
  font-size: (size / 19.2) vw;
}

fzm(size) {
  font-size: (size / 7.5) vw;
}

// line-height
lhd(size) {
  line-height: (size / 19.2) vw;
}

lhm(size) {
  line-height: (size / 7.5) vw;
}

// common box-shadow
bsh() {
  box-shadow: 0px 0px 20px rgba($gray, 0.1);
}

bshHover() {
  box-shadow: 0px 0px 20px rgba($gray, 0.2);
}

searchBtn() {
  width: 6.45vw;
  height: 6.45vw;
  border-left: 2px solid $gray;
  border-bottom: 2px solid $gray;
  border-radius: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  background: transparent;

  .search-icon {
    width: 1.77vw;
    height: 1.77vw;
    display: flex;
    justify-content: center;
    align-items: center;
    fzd(60);

    img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
  }
}
